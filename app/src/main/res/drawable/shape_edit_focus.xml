<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!--指定形状内部的填充颜色-->
    <solid android:color="#ffffff" />
    <!--指定形状轮廓的粗细与颜色-->
    <stroke
        android:width="2dp"
        android:color="#11A1E3" />
    <!--指定形状四个圆角的半径-->
    <corners android:radius="5dp" />
    <!--指定形状四个方向上的间距-->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" />
</shape>